<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aluno.neonae.MenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_weight="0.37">

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="167dp"
                android:id="@+id/btnPerfil"
                android:background="@drawable/perfil"
                android:baselineAlignBottom="true"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="159dp"
                android:id="@+id/btnEventos"
                android:layout_gravity="right"
                android:background="@drawable/evento"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.44" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04">

            <ImageButton
                android:layout_height="154dp"
                android:id="@+id/btnSair"
                android:background="@drawable/sair"
                android:baselineAlignBottom="true"
                android:layout_weight="0.21"
                android:layout_width="150dp" />

            <ImageButton
                android:layout_height="155dp"
                app:srcCompat="@drawable/qrcodecyan"
                android:id="@+id/btnQrCode"
                android:layout_width="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

